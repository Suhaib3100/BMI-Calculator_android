<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".InputActivity">

         <!-- App Bar -->
     <androidx.appcompat.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:background="@color/white"
         android:elevation="6dp"
         app:layout_constraintTop_toTopOf="parent"
         app:title="@string/input_screen_title"
         app:titleTextColor="@color/text_primary"
         app:titleTextAppearance="@style/TextAppearance.BMICalculator.Title"
         app:menu="@menu/toolbar_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

                 <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingHorizontal="4dp">

            <!-- Gender Selection -->
            <TextView
                android:id="@+id/tvGenderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/genderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvGenderLabel">

                                 <!-- Male Card -->
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/cardMale"
                     android:layout_width="0dp"
                     android:layout_height="140dp"
                     android:layout_weight="1"
                     android:layout_marginEnd="8dp"
                     android:clickable="true"
                     android:focusable="true"
                     android:foreground="?attr/selectableItemBackground"
                     app:cardCornerRadius="24dp"
                     app:cardElevation="8dp"
                     app:cardBackgroundColor="@color/card_background"
                     app:strokeWidth="0dp"
                     app:rippleColor="@color/primary_blue_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_male"
                            android:contentDescription="Male" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                                 <!-- Female Card -->
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/cardFemale"
                     android:layout_width="0dp"
                     android:layout_height="140dp"
                     android:layout_weight="1"
                     android:layout_marginStart="8dp"
                     android:clickable="true"
                     android:focusable="true"
                     android:foreground="?attr/selectableItemBackground"
                     app:cardCornerRadius="24dp"
                     app:cardElevation="8dp"
                     app:cardBackgroundColor="@color/card_background"
                     app:strokeWidth="0dp"
                     app:rippleColor="@color/female_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_female"
                            android:contentDescription="Female" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Height Selection -->
            <TextView
                android:id="@+id/tvHeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/genderContainer"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:layout_constraintTop_toBottomOf="@id/tvHeightLabel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="40dp">

                    <NumberPicker
                        android:id="@+id/npFeet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:text="ft"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/npInches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="in"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weight and Age -->
            <LinearLayout
                android:id="@+id/weightAgeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/cardHeight">

                                 <!-- Weight Card -->
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/cardWeight"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginEnd="8dp"
                     app:cardCornerRadius="24dp"
                     app:cardElevation="8dp"
                     app:cardBackgroundColor="@color/card_background">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="173dp"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:padding="24dp">

                         <ImageView
                             android:layout_width="48dp"
                             android:layout_height="48dp"
                             android:layout_marginBottom="8dp"
                             android:contentDescription="Weight"
                             android:src="@drawable/ic_weight" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/weight"
                             android:textColor="@color/text_primary"
                             android:textSize="18sp"
                             android:textStyle="bold" />

                         <EditText
                             android:id="@+id/etWeight"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="12dp"
                             android:background="@null"
                             android:hint="0"
                             android:inputType="numberDecimal"
                             android:text="87"
                             android:textColor="@color/text_primary"
                             android:textSize="28sp"
                             android:textStyle="bold" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="8dp"
                             android:text="@string/kilogram_unit"
                             android:textColor="@color/text_light"
                             android:textSize="16sp" />
                     </LinearLayout>
                 </com.google.android.material.card.MaterialCardView>

                                 <!-- Age Card -->
                 <com.google.android.material.card.MaterialCardView
                     android:id="@+id/cardAge"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginStart="8dp"
                     app:cardCornerRadius="24dp"
                     app:cardElevation="8dp"
                     app:cardBackgroundColor="@color/card_background">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:padding="24dp">

                         <ImageView
                             android:layout_width="48dp"
                             android:layout_height="48dp"
                             android:layout_marginBottom="8dp"
                             android:contentDescription="Age"
                             android:src="@drawable/ic_age" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/age"
                             android:textColor="@color/text_primary"
                             android:textSize="18sp"
                             android:textStyle="bold" />

                         <EditText
                             android:id="@+id/etAge"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="12dp"
                             android:background="@null"
                             android:hint="0"
                             android:inputType="number"
                             android:text="29"
                             android:textColor="@color/text_primary"
                             android:textSize="28sp"
                             android:textStyle="bold" />
                     </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

                         <!-- Calculate Button -->
             <Button
                 android:id="@+id/btnCalculate"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/calculate_button"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="@color/white"
                 android:background="@drawable/button_background_enhanced"
                 android:padding="20dp"
                 android:layout_marginTop="40dp"
                 android:layout_marginHorizontal="8dp"
                 android:layout_marginBottom="24dp"
                 app:layout_constraintTop_toBottomOf="@id/weightAgeContainer"
                 app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
